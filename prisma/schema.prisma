// Prisma schema for CallPro

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  AGENT
  ADMIN
}

enum LeadStatus {
  NEW
  PENDING
  ACCEPTED
  INVOICED
  PAID
}

enum InvoiceStatus {
  PENDING
  PAID
}

enum PurchaseStatus {
  ACTIVE
  CANCELLED
  EXPIRED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?
  role          Role      @default(USER)
  tokenVersion  Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  purchases          Purchase[]
  passwordResetTokens PasswordResetToken[]
  agentLeads         Lead[] @relation("AgentLeads")
  assignedLeads      Lead[] @relation("AssignedLeads")

  @@index([createdAt])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Package {
  id            String   @id @default(cuid())
  name          String   @unique
  description   String?
  price         Int      // cents (e.g., 149900 = $1,499.00)
  features      String[]
  isActive      Boolean  @default(true)
  sortOrder     Int      @default(0)
  stripePriceId String?  @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  purchases Purchase[]
}

model Purchase {
  id              String         @id @default(cuid())
  userId          String
  packageId       String
  status          PurchaseStatus @default(ACTIVE)
  stripeSessionId String?        @unique
  expiresAt       DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  package Package @relation(fields: [packageId], references: [id])

  @@index([userId, status])
  @@index([expiresAt])
}

model Lead {
  id           String     @id @default(cuid())
  agentId      String
  name         String
  email        String
  phone        String
  zipCode      String
  status       LeadStatus @default(NEW)
  assignedToId String?
  createdAt    DateTime   @default(now())

  agent      User  @relation("AgentLeads", fields: [agentId], references: [id], onDelete: Cascade)
  assignedTo User? @relation("AssignedLeads", fields: [assignedToId], references: [id], onDelete: SetNull)
  invoice    Invoice?

  @@index([agentId])
  @@index([assignedToId])
  @@index([status])
  @@index([createdAt])
}

model Invoice {
  id              String        @id @default(cuid())
  leadId          String        @unique
  amount          Int           // cents (e.g., 50000 = $500.00)
  description     String?
  status          InvoiceStatus @default(PENDING)
  stripeSessionId String?       @unique
  paidAt          DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([status])
}
