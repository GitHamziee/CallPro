// Prisma schema for CallPro authentication

datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

// TODO: for Prisma 7+ you may move connection details to prisma.config.js, but
// an inline datasource is still tolerated by the CLI for now.

// user model with credentials support
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  // password field over which we have control (required for credentials provider)
  password      String?   // stored as bcrypt hash
  // current plan
  plan          String    @default("Starter")   // Starter, Growth, or Enterprise

  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
